extends layout
block content
  .container
      h2 
        p
         | Hello from NodeJs 12
      br         
      br
      h5
        p
         | This is an application build & deployed via cloud native CI/CD pipeline.         
      br         
      br
    
      .row
        .col-md-3
          form(method="post", action="get_links")
            .form-group
              label.sr-only(for="author") Author Name
              input.form-control( name="author" type="text" placeholder="Enter Author Name (for ex: Nicklas)" required='required')
            button.btn.btn-success(type="submit") Get Author
      if error_authors
        br
        .alert.alert-danger #{error_authors}
      if links
        .row
          .col-md-5
            p
            br
            .panel.panel-primary
              .panel-heading References for: #{links.name}
              .panel-body
               p Twitter = #{links.twitter}
               p Blog = #{links.blog}